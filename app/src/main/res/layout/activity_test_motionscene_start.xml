<?xml version="1.0" encoding="utf-8"?>
<me.dkzwm.widget.srl.SmoothRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/smoothRefreshLayout_test_motionLayout_scene"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayout_test_motionLayout_scene"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/test_motion_scene">

        <ImageView
            android:id="@+id/imageView_test_motionLayout_scene"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/portrait"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_test_motionLayout_scene"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_test_motionLayout_scene" />
    </androidx.constraintlayout.motion.widget.MotionLayout>
</me.dkzwm.widget.srl.SmoothRefreshLayout>